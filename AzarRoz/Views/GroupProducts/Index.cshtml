@model IEnumerable<AzarRoz.Data.Models.GroupProduct>

@{
    ViewBag.Title = "گروه بندی محصولات";
}

<h4 class="text-center well"><i class="fas fa-tag"></i>&nbsp;گروه بندی محصولات</h4>

<p>
    <a href="~/GroupProducts/Create" class="btn btn-success"><i class="fas fa-plus"></i>&nbsp;ایجاد گروه</a>
</p>

<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a href="~/GroupProducts/Edit/@(item.Id)" class="btn btn-warning btn-sm"><i class="fas fa-pen"></i></a> |
                <a href="~/GroupProducts/Delete/@(item.Id)" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
    }
</table>
